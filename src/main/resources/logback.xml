<configuration>
  <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
  <springProperty scop="context" name="fileBasePath" source="logback.appender.file.path" defaultValue="/opt/logs"/>
  <springProperty scop="context" name="applicationName" source="spring.application.name" defaultValue=""/>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%red(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%X{traceId}] %highlight(%-5level) %thread %class:%line %cyan(%msg%n)</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${fileBasePath}/${applicationName}/out.log</file>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${fileBasePath}/%d{yyyy-MM-dd}/%d{yyyy-MM-dd}-%i.log</fileNamePattern>
      <maxFileSize>100MB</maxFileSize>
      <maxHistory>30</maxHistory>
    </triggeringPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId}] %-5level %thread %class:%line %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="console"/>
    <appender-ref ref="file"/>
  </root>

</configuration>
